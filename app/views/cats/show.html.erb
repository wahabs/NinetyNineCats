<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<% if @cat.owner == current_user %>
  <%= link_to "Edit #{@cat.name}", edit_cat_url(@cat) %>
<% else %>
  <%= link_to "Request Page", new_cat_cat_rental_request_url(@cat) %> 
<% end  %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Requested By</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <%= render "req_tr", req: req , cat: @cat%>
  <% end %>
</table>
